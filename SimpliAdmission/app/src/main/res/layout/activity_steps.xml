<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".Steps">

    <RelativeLayout
        android:id="@+id/header_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="30dp">

        <TextView
            android:id="@+id/college_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/ubuntu_bold"
            android:text="@string/steps"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:layout_marginLeft="20dp" />

        <TextView
            android:id="@+id/undertext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/college_txt"
            android:layout_marginStart="20dp"
            android:layout_marginTop="9dp"
            android:textColor="#60FFFF"
            android:textSize="12sp"
            android:layout_marginLeft="20dp" />

        <ImageView
            android:id="@+id/college_icond"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="20dp"
            android:src="@drawable/steps"
            android:layout_marginRight="20dp" />

    </RelativeLayout>
<!--    <Button-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="click"-->
<!--        android:id="@+id/click_button"-->
<!--        android:textColor="@color/white"/>-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/tview0"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/tview1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/tview0"
                android:layout_margin="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/left_rounded_corner"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/tview2"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:background="@drawable/left_rounded_corner"
                android:layout_below="@+id/tview1"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="10dp"/>

            <TextView
                android:id="@+id/tview3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/tview2"
                android:layout_margin="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/left_rounded_corner"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/tview4"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:background="@drawable/left_rounded_corner"
                android:layout_below="@+id/tview3"
                android:layout_margin="10dp"
                android:layout_height="match_parent"
                android:padding="10dp"/>
            <TextView
                android:id="@+id/tview5"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_below="@+id/tview4"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/left_rounded_corner"
                />



        </RelativeLayout>
    </ScrollView>

</LinearLayout>